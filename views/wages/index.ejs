

<%- include("../../partials/header") %>

<div id="detail">
  <h1>Past Transactions</h1>
  
  
      <div class="scrollable">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Employee</th>
              <th>Work Done</th>
              <th>Attendance</th>
              <th>Wage</th>
              <th> Edit/ Delete </th>
            </tr>
          </thead>
          <tbody>
            <% wages.forEach(function(wage){ %>
                   
              <tr>
                <td><%= wage.date %></td>
                <td><%= wage.name %> </td>
                <td><%= wage.description %></td>
                <% if(wage.attendance ==='false') { %>
                    <td> Present  </td>
                <% } %>
                <% if(wage.attendance =='true') { %>
                    <td> Absent  </td>
                <% } %>
                
                
                <td><%= wage.amount %></td>
                
                <td>  <form class="delete-form" action="/wage/<%=wage._id%>?_method=DELETE" method="POST">
                  <input type="submit" class="btn btn-xs btn-danger" id ="<%= wage._id %>"value="Delete"> 

              </form>
            </td>
                <!-- <td><%= wage.amount %></td> -->
              </tr>
            
              <% }); %>
              

          </tbody>
        </table>
      </div>
    </div>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
